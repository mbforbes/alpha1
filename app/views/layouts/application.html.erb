<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="span8 offset2 header">
				<%= render 'layouts/header' %>
			</div>
		</div>
		<div class="row">
			<div class="span2 leftbar">
				<%= render 'layouts/leftbar' %>
			</div>
			<div class="span8 mainbar">
				<div class="content">
					<%= yield %>
				</div>
			</div>
			<div class="span2 rightbar">
				<%= render 'layouts/rightbar' %>
			</div>
		</div>
		<div class="row">
			<div class="span8 offset2 footer">
				<%= render 'layouts/footer' %>
				<%= debug(params) if Rails.env.development? %>
			</div>
		</div>		
	</div>
</body>
</html>
